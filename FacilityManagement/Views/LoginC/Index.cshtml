@model FacilityManagement.Models.LoginC

@{
    ViewData["Title"] = "Đăng nhập";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!ViewData.ModelState.IsValid)

{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var modelState in ViewData.ModelState.Values)

            {

                foreach (var error in modelState.Errors)

                {
                    <li>@error.ErrorMessage</li>
                }

            }
        </ul>
    </div>
}

<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg p-4 rounded-4" style="width: 400px;">
        <div class="card-body">
            <h2 class="text-center text-primary mb-4">Đăng nhập</h2>
            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control form-control-lg shadow-sm" placeholder="Email" required />
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Số điện thoại</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg shadow-sm" placeholder="Số điện thoại" required />
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                </div>
            </form>
        </div>
    </div>
</div>

